@model BankMVC.Models.BankAccount

@{
    ViewBag.Title = "GetATMpin";
}
<head>
    <h2 class="mintitle">Please enter your pin below</h2>
    @Styles.Render("~/CSS/EditForms.css")
    <style>
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
        }
    </style>
</head>

<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">


<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <form>
                <div class="form-horizontal">
                    <h4 style="font-weight:bold;margin-right:940px">Enter the pin</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.AccountNumber)
                    @Html.HiddenFor(model => model.AccountBalance)
                    @Html.HiddenFor(model => model.WithdrawAmount)
                    @Html.HiddenFor(model => model.AccountType)
                    @Html.HiddenFor(model => model.CustomerId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.ATMpin, "Pin", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-2">
                            <input type="password" @Html.PasswordFor(model => model.ATMpin, new { htmlAttributes = new { @class = "form-control", @autocomplete = "new_atmpin"} })
                                   @Html.ValidationMessageFor(model => model.ATMpin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                            <input type="submit" value="Withdraw" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }
    <br />

</body>
